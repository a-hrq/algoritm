#include<stdio.h>
#include<stdlib.h>
typedef struct pessoa{
    char nome[50];
    int documento;
    int idade;
} Pessoa;

void maisven(int qtd, Pessoa **v4){
int i, v, n;

for(i = 0; i < qtd; i++){
  if(i == 0){
    v = n = i;
  } else{
      if(v4[v]->idade < v4[i]->idade){
        v = i;
      }
      if(v4[n]->idade > v4[i]->idade){
        n = i;
      }
  }
}
printf("O mais velho se chama: %s\n", v4[v]->nome);
printf("O mais novo se chama: %s\n", v4[n]->nome);
}

int main(){
int qtd, i;
printf("Quantas pessoas?");
scanf("%d", &qtd);
printf("\n");
Pessoa **v4 = (Pessoa**) malloc(qtd*sizeof(Pessoa*));

for(i = 0; i < qtd; i++){
    v4[i] = (Pessoa*)malloc(qtd*sizeof(Pessoa));
}
if(v4  == NULL){
        exit(1);
}

for(i = 0; i < qtd; i++){
    if(v4[i] == NULL){
        exit(1);
    }
}

for(i = 0; i < qtd; i++){
    fflush(stdin);
    printf("Digite o nome da pessoa %d : ", i+1);
    scanf("%[^\n]", &v4[i]->nome);
    fflush(stdin);
    printf("Digite o n do documento da pessoa %d: ", i+1);
    scanf("%d", &v4[i]->documento);
    fflush(stdin);
    printf("Digite a idade da pessoa %d: ", i+1);
    scanf("%d", &v4[i]->idade);
    printf("\n\n");
}

maisven(qtd, v4);

for(i = 0; i < qtd; i++){
    free(v4[i]);
}
free(v4);
return 0;
}
